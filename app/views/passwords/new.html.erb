<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="max-width: 600px;">
        <div class="card-body">
          <h1 class="card-title">Forgot Your Password?</h1>
          <%= form_with url: password_reset_path, data: { turbo: false } do |form| %>
            <div class="mb-3">
              <%= form.label :email %>
              <%= form.text_field :email, class: "form-control", placeholder: "Your email" %>
            </div>

            <div class="mb-3">
              <%= form.submit "Reset Password", class: "btn btn-dark btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
