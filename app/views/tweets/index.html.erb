<div class="d-flex justify-content-between align-items-center mt-5">
    <h1>Tweets</h1>

    <% if Current.user.twitter_accounts.any?%>
        <%= link_to "Schedule a Tweet", new_tweet_path, class: "btn btn-dark mb-4"%>
    <%end%>
</div>

<% if Current.user.twitter_accounts.none?%>
    <%= button_to "Connect a Twitter Account", "/auth/twitter", method: :post, data: {turbo: false}, class: "btn btn-dark" %>
<%end%>

<%= render @tweets %>