<div class="container">
  <div class="row justify-content-end">
    <div class="col-md-6">
      <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="card-body">
          <h1 class="card-title">Sign In</h1>

          <%= form_with url: sign_in_path, data: { turbo: false } do |form| %>
            <div class="mb-3">
              <%= form.label :email %>
              <%= form.text_field :email, class: "form-control", placeholder: "bharat@gmail.com" %>
            </div>

            <div class="mb-3">
              <%= form.label :password %>
              <%= form.password_field :password, class: "form-control", placeholder: "password" %>
              <%= link_to "Forgot your password?", password_reset_path, class: "text-muted" %>
            </div>

            <div class="mb-3">
              <%= form.submit "Sign In", class: "btn btn-dark btn-block"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
